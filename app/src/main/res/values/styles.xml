<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomFullDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MySearchViewStyle">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/baseline_close_24</item>
        <item name="hintTextColor">@color/text_d2d2d2</item>
        <item name="android:textColor">@color/text_d2d2d2</item>
    </style>

    <style name="SegmentRadioButton">
        <item name="android:textColor">@drawable/text_color_segment_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/base_text</item>
    </style>


    <style name="CommonEditText" parent="BaseEditText">
        <item name="android:background">@drawable/bg_round_rect_stroke_e2</item>
    </style>

    <style name="CommonEditText44" parent="CommonEditText">
        <item name="android:layout_height">44dp</item>
    </style>

    <!-- 등록, 수정, 확인 버튼-->
    <style name="PositiveButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_f6f6f6</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.07</item>
        <item name="android:background">@drawable/selector_button_bg_blue_circle</item>
    </style>

    <!-- 삭제, 취소 버튼-->
    <style name="NegativeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_f6f6f6</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.07</item>
        <item name="android:background">@drawable/bg_radius4_red</item>
    </style>
</resources>